@model List<Trip>
@{
    ViewData["Title"] = "Home Page";
}
    <a class="primaryLink" asp-action="AddTrip1">Add Trip</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Accommodations</th>
                <th>Things To Do</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td class="destination">@trip.Destination</td>
                    <td>@trip.StartDate?.ToString("MMMM dd, yyyy")</td>
                    <td>@trip.EndDate?.ToString("MMMM dd, yyyy")</td>
                    <td class="multiLine">
                        <p class="accommodationName">@trip.AccommodationName</p>
                        <p><span class="multiLineLabel">Phone: </span>@trip.AccommodationPhone</p>
                        <p><span class="multiLineLabel">Email: </span>@trip.AccommodationEmail</p>
                    </td>
                    <td class="multiLine">
                        <p><span class="multiLineLabel">1: </span>@trip.ThingToDo1</p>
                        <p><span class="multiLineLabel">2: </span>@trip.ThingToDo2</p>
                        <p><span class="multiLineLabel">3: </span>@trip.ThingToDo3</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
